{
  "name": "calc",
  "homepage": "https://belchior.github.io/calc",
  "version": "0.2.2",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "serve": "serve -s build",
    "build": "react-scripts build && bash ./config/postbuild.sh",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "cross-env CI=true react-scripts test --env=jsdom --coverage --colors",
    "e2e": "cross-env JEST_PUPPETEER_CONFIG='./config/jest-puppeteer.config.js' jest -i -c ./config/jest.config.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "enzyme": "^3.10.0",
    "enzyme-to-json": "^3.4.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "coveralls": "^3.0.9",
    "cross-env": "^6.0.3",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.1",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-react": "^7.16.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-puppeteer": "^4.3.0",
    "prop-types": "^15.7.2",
    "puppeteer": "^2.0.0",
    "serve": "^11.2.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js",
      "!src/**/registerServiceWorker.js",
      "!src/**/*.e2e.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:ci"
    }
  }
}
