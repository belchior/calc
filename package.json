{
  "name": "calc",
  "homepage": "http://belchior.github.io/calc",
  "version": "0.2.2",
  "license": "MIT",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "serve": "npx serve -s build",
    "build": "npm run lint && react-scripts build && bash ./config/postbuild.sh",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "e2e": "cross-env JEST_PUPPETEER_CONFIG='./config/jest-puppeteer.config.js' npx jest -c ./config/jest.config.js",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "lint": "npx eslint ./src/"
  },
  "dependencies": {
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-redux": "6.0.0",
    "react-router-dom": "4.3.1",
    "react-scripts": "2.1.2",
    "react-test-renderer": "16.7.0",
    "redux": "4.0.1"
  },
  "devDependencies": {
    "coveralls": "3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "5.6.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-react": "7.12.0",
    "expect-puppeteer": "^3.5.1",
    "gh-pages": "2.0.1",
    "jest-puppeteer": "^3.7.0",
    "prop-types": "^15.6.2",
    "puppeteer": "^1.11.0",
    "puppeteer-to-istanbul": "^1.2.2",
    "serve": "^10.1.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.e2e.{js,jsx}"
    ]
  }
}
