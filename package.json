{
  "name": "calc",
  "homepage": "http://belchior.github.io/calc",
  "version": "0.2.2",
  "license": "MIT",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "serve": "serve -s build",
    "build": "npm run lint && react-scripts build && bash ./config/postbuild.sh",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "react-scripts test --env=jsdom --coverage",
    "e2e": "cross-env JEST_PUPPETEER_CONFIG='./config/jest-puppeteer.config.js' jest -i -c ./config/jest.config.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "lint": "eslint ./src/"
  },
  "dependencies": {
    "enzyme": "^3.9.0",
    "enzyme-to-json": "^3.3.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^2.1.8",
    "react-test-renderer": "^16.8.6",
    "redux": "4.0.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-react": "^7.12.4",
    "gh-pages": "2.0.1",
    "jest": "^24.5.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-puppeteer": "^4.1.0",
    "prop-types": "^15.7.2",
    "puppeteer": "^1.14.0",
    "serve": "^10.1.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.e2e.{js,jsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:ci"
    }
  }
}
