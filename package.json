{
  "name": "calc",
  "version": "0.2.2",
  "description": "Arithmetic calculator: Elegant, modern and entertaining by Belchior Oliveira",
  "author": "Belchior Oliveira (https://github.com/belchior)",
  "homepage": "https://belchior.github.io/calc",
  "repository": {
    "type": "git",
    "url": "git@github.com:belchior/calc.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "react-scripts build",
    "deploy": "gh-pages -d build",
    "e2e": "cross-env JEST_PUPPETEER_CONFIG='./config/jest-puppeteer.config.js' jest -c ./config/jest.config.js",
    "lint": "eslint ./src",
    "postbuild": "bash ./config/postbuild.sh",
    "predeploy": "npm run build",
    "serve": "serve -s build",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "cross-env CI=true react-scripts test --env=jsdom --coverage --colors"
  },
  "dependencies": {
    "enzyme": "^3.10.0",
    "enzyme-to-json": "^3.4.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "coveralls": "^3.0.9",
    "cross-env": "^6.0.3",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.1",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-no-null": "^1.0.2",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-puppeteer": "^4.3.0",
    "prop-types": "^15.7.2",
    "react-scripts": "^3.2.0",
    "serve": "^11.2.0"
  },
  "optionalDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.3",
    "puppeteer": "^2.0.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js",
      "!src/**/registerServiceWorker.js",
      "!src/**/*.e2e.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:ci && npm run build && npm run e2e"
    }
  }
}
